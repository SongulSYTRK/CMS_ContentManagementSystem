@model UpdateCategoryDTO
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<div class=" col-sm-12">
    <div class="card">
        <div class=" card-header">
            <h4 class=" card-title">Update Category</h4>
        </div>
        <div class=" card-body">
            <form asp-action="Update">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Categoryname" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <input type="submit" value="Update" class="btn btn-primary btn-sm float-right" />

                </div>
            </form>
        </div>
        <div class=" card-footer">
            <a asp-action="List" class="btn btn-block btn-dark">Back To List</a>
        </div>
    </div>
</div>