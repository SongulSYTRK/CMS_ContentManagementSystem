@model AssignedRoleToUserDTO
@{
    ViewData["Title"] = "AssignedRoleToUsers";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Assigned Role To Users</h4>
            </div>
            <div class="card-body">
                <form asp-action="AssignedRoleToUsers">
                    <input type="hidden" name="RoleName" value="@Model.Role.Name" />
                    <div class="row">
                        <div class="col-6">
                            <h6 class="card-title">Add user to <span class="badge badge-primary">@Model.Role.Name</span></h6>
                            <table class="table table-hover">
                                @if (Model.HasNoRole.Count() == 0)
                                {
                                    <tr>
                                        <td>All user has a role..!</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var user in Model.HasNoRole)
                                    {
                                        <tr>
                                            <td>@user.UserName</td>
                                            <td>
                                                <input type="checkbox" value="@user.Id" name="AddIds" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                        <div class="col-6">
                            <h6 class="card-title">Remove User To <span class="badge badge-danger">@Model.Role.Name</span></h6>
                            <table class="table table-hover">
                                @if (Model.HasRole.Count() == 0)
                                {
                                    <tr>
                                        <td>Any users has a role..!</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var user in Model.HasRole)
                                    {
                                        <tr>
                                            <td>@user.UserName</td>
                                            <td>
                                                <input type="checkbox" value="@user.Id" name="DeleteIds" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-info float-right" />
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a asp-action="List" class="btn btn-block btn-dark">Back To List</a>
            </div>
        </div>
    </div>
</div>

